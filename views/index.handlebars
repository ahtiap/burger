<header>
    <h1><img src="" alt="burger"></h1>
    <h1>EAT-DA-BURGER!</h1>
    <h2><i>Track Your Burger Intake!</i></h2>
</header>

<div class="container" style="text-align: -webkit-center; padding-top: 2%">
    <div class="row mb-3" style="justify-content: center">
        <div class="tobedevoured col-sm-4">
            <h5 class="text-center py-1">BURGERS NOT YET TRIED!</h5>

            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block}}
            {{/unless}}
            {{/each}}
        </div>

        <div class="toeat col-sm-4">
            <h5 class="text-center py-1">BURGERS EATEN BEFORE!</h5>
            <ul class="burgers-devoured">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="toadd col-sm-4">
        <h5 class="text-center py-1">ADD YOUR BURGER</h5>
        <form class="create-form mx-auto">
            <div class="form-group">
                <input class="mx-auto d-block" placeholder="Enter a Burger Name" type="text" id="ca" name="name">
                <label for="ca"></label>
            </div>

            <div class="form-group1">
                <label for="devoured">Check one of the lists to add your new BURGER</label><br>
                <input type="radio" name="devoured" value="1" checked> ADD TO THE "BURGERS NOT YET TRIED" LIST!<br>
                <input type="radio" name="devoured" value="0"> ADD TO THE "EATEN" LIST!
            </div>
            <input class="btn btn-primary" type="submit" value="Submit">
    </div>
</div>